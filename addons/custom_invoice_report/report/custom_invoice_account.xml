<openerp>
    <data>

        <!-- Override default Invoice Report -->
        <record id="account_invoices" model="ir.actions.report.xml">
            <field name="name">Custom Invoice</field>
            <field name="model">account.invoice</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">custom_invoice_report.custom_invoice_report</field>
            <field name="report_file">custom_invoice_report.custom_invoice_report</field>
            <field name="attachment_use">True</field>
            <field name="attachment">(object.state in ('open','paid')) and ('CUSTINV'+(object.number or '').replace('/','')+'.pdf')</field>
        </record>

    </data>
</openerp>
